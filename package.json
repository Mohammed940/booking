{
  "name": "medical-booking-bot",
  "version": "1.0.0",
  "description": "Telegram bot for medical appointment booking integrated with Google Sheets",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "setup-webhook": "node setup-webhook.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "google-sheets",
    "appointment",
    "booking"
  ],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^134.0.0",
    "node-telegram-bot-api": "^0.66.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js",
      "!index.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "moduleNameMapper": {
      "^../googleSheetsService$": "<rootDir>/test/__mocks__/googleSheetsService.js"
    }
  }
}